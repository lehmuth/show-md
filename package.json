{
  "name": "show-md",
  "version": "0.4.0",
  "description": "show-md is a small nodejs server application which provides files on a HTTP server and converts md files into html files using showdown.",
  "main": "index.js",
  "bin": {
    "show-md": "bin/show-md.js"
  },
  "directories": {
    "bin": "./bin",
    "logs": "./logs"
  },
  "scripts": {
    "test": "echo Error: no test specified && exit 0",
    "start": "node bin/show-md.js",
    "preversion": "npm test",
    "prepublishOnly": "(echo init > logs/http.log) && (echo init > logs/system.log)",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lehmuth/show-md.git"
  },
  "keywords": [
    "markdown",
    "server"
  ],
  "author": "Dominik Lehmuth",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lehmuth/show-md/issues"
  },
  "homepage": "https://github.com/lehmuth/show-md/README.md",
  "dependencies": {
    "minimist": "^1.2.0",
    "showdown": "^1.9.1",
    "simple-node-logger": "^18.12.23"
  }
}
