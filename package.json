{
  "name": "show-md",
  "version": "0.5.1",
  "description": "show-md is a small nodejs server application which provides files on a HTTP server and converts md files into html files using showdown.",
  "main": "out/index.js",
  "bin": {
    "show-md": "out/bin/show-md.js"
  },
  "directories": {
    "bin": "./out/bin",
    "logs": "./logs"
  },
  "scripts": {
    "test": "echo Error: no test specified && exit 0",
    "start": "node out/bin/show-md.js",
    "preinstall": "tsc",
    "preversion": "tsc && npm test",
    "prepublishOnly": "(echo init > logs/http.log) && (echo init > logs/system.log)",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lehmuth/show-md.git"
  },
  "keywords": [
    "markdown",
    "server"
  ],
  "author": "Dominik Lehmuth",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lehmuth/show-md/issues"
  },
  "homepage": "https://github.com/lehmuth/show-md/README.md",
  "dependencies": {
    "minimist": "^1.2.0",
    "showdown": "^1.9.1",
    "simple-node-logger": "^18.12.24"
  },
  "devDependencies": {
    "typescript": "^3.7.5",
    "@types/minimist": "^1.2.0",
    "@types/node": "^13.5.0",
    "@types/showdown": "^1.9.3",
    "standard": "^14.3.1"
  }
}
